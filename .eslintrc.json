{
	"extends": [
    "plugin:flowtype/recommended",
    "airbnb",
    "prettier",
    "prettier/react"
	],
	"plugins": [
    "flowtype",
    "react",
		"prettier"
	],
  "rules": {
    "prettier/prettier": "error",
    "flowtype/define-flow-type": 1,
    "flowtype/use-flow-type": 1,
    "global-require": 0,
    "import/no-dynamic-require": 0,
    "import/prefer-default-export": 0,
    "react/destructuring-assignment": 0
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
    "jest": true
	}
}
